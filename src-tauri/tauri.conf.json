{
  "identifier": "com.lumina.app",
  "productName": "Lumina",
  "version": "1.3.1",
  "build": {
    "beforeDevCommand": "npm run dev:both",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../dist"
  },
  "app": {
    "security": {
      "csp": null,
      "dangerousDisableAssetCspModification": true,
      "capabilities": []
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 800,
        "resizable": true,
        "title": "Lumina",
        "width": 1200
      }
    ],
    "withGlobalTauri": true
  },
"bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico",
      "icons/icon.png",
      "icons/128x128.png",
      "icons/128x128@2x.png"
    ],
    "resources": [
      "../server",
      "../scripts"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDQ0NjFCNTg1RDRDNDFFQkMKUldTOEhzVFVoYlZoUkNNZUp4Y05Ra2lNamFlR2ZvVDFPL3krRGkybWN5Z0lPaUpIZStxdXJoOHUK",
      "endpoints": [
        "https://github.com/HashBrowns-fries/Lumina/releases/download/{{version}}/Lumina_{{target}}-{{arch}}-{{ext}}"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}