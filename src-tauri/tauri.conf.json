{
  "identifier": "com.lumina.app",
  "productName": "Lumina",
  "version": "1.3.3",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../dist"
  },
  "app": {
    "security": {
      "csp": null,
      "dangerousDisableAssetCspModification": true,
      "capabilities": []
    },
"windows": [
      {
        "label": "main",
        "fullscreen": false,
        "height": 800,
        "resizable": true,
        "title": "Lumina",
        "width": 1200
      },
      {
        "label": "floating",
        "title": "Lumina Quick",
        "url": "/floating.html",
        "width": 380,
        "height": 520,
        "x": 100,
        "y": 100,
        "alwaysOnTop": true,
        "decorations": false,
        "transparent": true,
        "skipTaskbar": true,
        "resizable": false,
        "visible": false,
        "focus": true
      }
    ],
    "withGlobalTauri": true
  },
"bundle": {
    "active": true,
    "targets": ["msi", "nsis"],
    "icon": [
      "icons/icon.ico",
      "icons/icon.png",
      "icons/128x128.png",
      "icons/128x128@2x.png"
    ],
    "resources": [
      "../_up_"
    ],
    "windows": {
      "nsis": {
        "installMode": "currentUser"
      }
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDQ0NjFCNTg1RDRDNDFFQkMKUldTOEhzVFVoYlZoUkNNZUp4Y05Ra2lNamFlR2ZvVDFPL3krRGkybWN5Z0lPaUpIZStxdXJoOHUK",
      "endpoints": [
        "https://github.com/HashBrowns-fries/Lumina/releases/download/{{version}}/Lumina_{{target}}-{{arch}}-{{ext}}"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}