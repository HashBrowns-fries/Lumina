{
  "name": "lumina",
  "private": true,
  "version": "1.4.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:sanskrit-api": "cd scripts && uv run enhanced_sanskrit_api.py",
    "dev:full": "concurrently \"npm run dev:sanskrit-api\" \"npm run dev:tauri\"",
    "build": "vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "dev:tauri": "tauri dev",
    "build:tauri": "npm run prebuild && tauri build",
    "prebuild": "npm run clean:scripts && npm run create:up:dir",
    "create:up:dir": "node -e \"const fs=require('fs');const path=require('path');const upDir='_up_';if(fs.existsSync(upDir))fs.rmSync(upDir,{recursive:true});fs.mkdirSync(upDir+'/scripts',{recursive:true});fs.cpSync('scripts',upDir+'/scripts',{recursive:true});console.log('Created _up_ directory structure')\"",
    "clean:scripts": "node -e \"const fs=require('fs');const p='scripts';fs.readdirSync(p).filter(f=>f.startsWith('test_')||f.endsWith('.backup')||f.endsWith('.log')).forEach(f=>fs.rmSync(p+'/'+f,{recursive:true}))\"",
    "start:sanskrit": "cd scripts && python enhanced_sanskrit_api.py"
  },
  "dependencies": {
    "@google/genai": "^1.41.0",
    "@lingo-reader/epub-parser": "^0.4.5",
    "@tauri-apps/api": "^2.10.1",
    "@tauri-apps/plugin-updater": "^2.0.0",
    "@types/dompurify": "^3.0.5",
    "@types/sqlite3": "^3.1.11",
    "dexie": "^4.3.0",
    "dompurify": "^3.3.1",
    "epubjs": "0.3.93",
    "idb-keyval": "6.2.1",
    "lucide-react": "^0.564.0",
    "pdfjs-dist": "4.10.38",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.0.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.10.0",
    "@types/node": "^22.14.0",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "^9.2.1",
    "npm-run-all": "^4.1.5",
    "typescript": "~5.8.2",
    "vite": "^6.2.0"
  }
}
